  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prettier": "prettier --write \"src/**/*.{ts,js,tsx,jsx}\"",
    "prettier:check": "prettier --check \"src/**/*.{ts,js,tsx,jsx}\"",
    "lint": "eslint --max-warnings 0 src --ext .ts,.js,.tsx,.jsx",
    "lint:fix": "eslint --fix src --ext .ts,.js,.tsx,.jsx"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "plugins": [
      "@typescript-eslint",
      "unused-imports"
    ],
    "extends": [
      "react-app",
      "react-app/jest",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build",
      "src/api/Library_checkerServiceClientPb.ts",
      "**/*_pb.js",
      "**/*_pb.d.ts"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json"
      ]
    },
    "rules": {
      "@typescript-eslint/no-empty-interface": "off",
      "unused-imports/no-unused-imports": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^4.3.1",
    "@typescript-eslint/typescript-estree": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^4.3.1",
